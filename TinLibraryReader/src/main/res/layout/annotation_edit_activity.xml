<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9f4" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/rl_title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:padding="10dip" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_bg_back"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="批注"
            android:textColor="#FAFFEF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_save_annotation"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bg_normal"
            android:src="@drawable/bookdetails_discusspublish" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_container"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/dliver_line" />

        <EditText
            android:id="@+id/ed_annotation_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bookdetails_adbg"
            android:focusable="true"
            android:gravity="top"
            android:textColor="@color/black"
            android:padding="10dip" />
    </LinearLayout>

</RelativeLayout>