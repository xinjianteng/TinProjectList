<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9f4" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/rl_title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:padding="10dip" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_bg_back"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="分享给新浪好友"
            android:textColor="#FAFFEF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_send_text"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg_normal"
            android:text="分享"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_container"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/dliver_line" />

        <EditText
            android:id="@+id/ed_share_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bookdetails_adbg"
            android:focusable="true"
            android:gravity="top"
            android:padding="10dip"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>