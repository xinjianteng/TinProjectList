<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dip"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/book_shelf_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/book_shelf_board"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_book_fram_one"
                android:layout_width="90dip"
                android:layout_height="100dip"
                android:orientation="vertical"
                 android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_in_history_one"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/book_shelf_cover" />

                <TextView
                    android:id="@+id/txt_book_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="geeboo history"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_book_fram_two"
                android:layout_width="90dip"
                android:layout_height="100dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_in_history_two"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:src="@drawable/book_shelf_cover" />

                <TextView
                    android:id="@+id/txt_book_title_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="geeboo history"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_book_fram_thress"
                android:layout_width="90dip"
                android:layout_height="100dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_in_history_thress"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:src="@drawable/book_shelf_cover" />

                <TextView
                    android:id="@+id/txt_book_title_thress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="geeboo history"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>