<?xml version="1.0" encoding="utf-8"?><!-- @drawable/reading__text_selector_view__bg -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_panel_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="29dp"
    android:paddingLeft="29dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/reading_text_selector_view_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="05-06 16:30"
                android:textColor="#999999"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="我的批注:"
                android:textSize="9dp"
                android:textColor="#2cc883" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_annotation_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="12dp"
            android:focusable="false"
            android:lineSpacingExtra="10sp"
            android:scrollbars="vertical"
            android:text="批注显示在这里"
            android:textColor="#ffffff"
            android:textSize="12dp" />


        <!-- android:textColor="@cdolor/white" -->
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/reading__text_selector_view__up_arrow" />

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:src="@drawable/reading__text_selector_view__down_arrow"
        android:visibility="gone" />

</RelativeLayout>