<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99ffffff"
    android:orientation="vertical"
    android:paddingTop="36dp"
    android:paddingBottom="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_wx"
            android:gravity="center_horizontal"
            android:text="微信"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/share_qq_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_qq"
            android:gravity="center_horizontal"
            android:text="QQ好友"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/share_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_weibo"
            android:gravity="center_horizontal"
            android:text="微博"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/share_friend_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_friends"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/share_book_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_square"
            android:gravity="center_horizontal"
            android:text="广场"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_sompanionship"
            android:gravity="center_horizontal"
            android:text="书友"
            android:textColor="@color/text_default_color"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_sompanionship"
            android:gravity="center_horizontal"
            android:text="书友"
            android:textColor="@color/text_default_color"
            android:textSize="14dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="9dp"
            android:drawableTop="@drawable/icon_sompanionship"
            android:gravity="center_horizontal"
            android:text="书友"
            android:textColor="@color/text_default_color"
            android:textSize="14dp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>