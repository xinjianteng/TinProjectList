	<RelativeLayout
        android:id="@+id/rl_reader_invite"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@color/c110"
        android:visibility="visible"
        android:layout_gravity="right" >
        <ImageView
            android:id="@+id/iv_reader_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/reader_menu_invite" />
        <ImageView
            android:id="@+id/iv_new_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/new_tip"
            android:visibility="gone" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_reader_invite"
            android:text="邀请读书"
            android:textColor="#ffffff"
            android:textSize="16sp" />
