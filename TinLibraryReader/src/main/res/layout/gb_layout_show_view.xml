<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/gb_id_pop_read_share_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="分享到"
            android:textColor="#333333"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <TextView
                android:id="@+id/share_book_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/icon_square"
                android:gravity="center_horizontal"
                android:text="广场"
                android:textColor="@color/text_default_color"
                android:textSize="14dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dotted_line"
            android:layerType="software"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="制作书签图片"
            android:textColor="#333333"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="17dp">

            <TextView
                android:id="@+id/share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/icon_wx"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="@color/text_default_color"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/share_qq_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/icon_qq"
                android:gravity="center_horizontal"
                android:text="QQ好友"
                android:textColor="@color/text_default_color"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/share_wb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/icon_weibo"
                android:gravity="center_horizontal"
                android:text="微博"
                android:textColor="@color/text_default_color"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/share_friend_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/icon_friends"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="@color/text_default_color"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>