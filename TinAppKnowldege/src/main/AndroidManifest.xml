<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tin.projectlist.app.model.knowldedge">

    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".KnowledgeAppLication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".model.main.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".model.main.view.SubjectHomeActivity"/>
        <activity android:name=".model.koolearn.view.KoolearnTypeActivity"/>
        <activity android:name=".model.koolearn.view.KoolearnListActivity"/>
        <activity android:name=".model.koolearn.view.KoolearnDetailActivity"/>

        <!-- 屏幕适配配制 1080*1920-->
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <meta-data
            android:name=" com.tin.projectlist.app.model.knowldedge.MyAppGlideMode"
            android:value="GlideModule" />



    </application>

</manifest>