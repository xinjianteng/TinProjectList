<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical"
    tools:ignore="ResourceName">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="@dimen/space_item"
        tools:ignore="ResourceName">

        <include layout="@layout/view_book"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/space_item">

            <TextView
                android:id="@+id/tv_bookName"
                style="@style/item_bookName" />

            <TextView
                android:id="@+id/tv_bookAuthor"
                style="@style/item_bookAuthor" />

            <TextView
                android:id="@+id/tv_bookSummary"
                style="@style/item_bookSummary" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:background="@color/colorLine"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_size"/>



</LinearLayout>