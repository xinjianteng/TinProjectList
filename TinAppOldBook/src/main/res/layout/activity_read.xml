<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".core.login.LoginActivity">


    <com.tin.projectlist.app.model.oldBook.readingTool.epub.view.DirectionalViewpager
        android:id="@+id/epubViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <TextView
        android:text="@string/nb_read_category"
        android:gravity="center"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"/>


    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcv_index"
        android:layout_width="200dp"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>