<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical"
    tools:ignore="ResourceName">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="@dimen/space_item"
        tools:ignore="ResourceName">
        <ImageView
            android:id="@+id/iv_bookCover"
            android:background="@drawable/bg_book"
            android:layout_marginLeft="@dimen/space_item"
            android:layout_width="@dimen/book_width"
            android:layout_height="@dimen/book_height"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_marginLeft="@dimen/space_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_bookName"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_bookAuthor"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_bookDynasty"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:background="@color/colorLine"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_size"/>



</LinearLayout>