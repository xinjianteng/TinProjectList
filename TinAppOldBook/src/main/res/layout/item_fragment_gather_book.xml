<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical"
    tools:ignore="ResourceName">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal"
        android:padding="@dimen/space_item"
        tools:ignore="ResourceName">


        <RelativeLayout
            android:background="@drawable/bg_book"
            android:padding="@dimen/space_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_bookCover"
                android:layout_width="@dimen/book_width"
                android:layout_height="@dimen/book_height"/>
        </RelativeLayout>



        <LinearLayout
            android:background="@color/white"
            android:layout_marginLeft="@dimen/space_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_bookName"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/app_test"
                android:textSize="@dimen/item_bookName_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_bookAuthor"
                    android:layout_marginTop="@dimen/space_item"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/app_test"
                    android:textSize="@dimen/item_bookAuthor_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_bookDynasty"
                    android:layout_marginTop="@dimen/space_item"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/space_item"
                    android:text="@string/app_test"
                    android:textSize="@dimen/item_bookAuthor_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bookIntroduction"
                android:layout_marginTop="@dimen/space_item"
                android:text="@string/app_test"
                android:textSize="@dimen/item_bookIntroduction_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:background="@color/colorLine"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_size"/>



</LinearLayout>