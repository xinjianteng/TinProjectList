<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
  >

    <ImageView
        android:id="@+id/msv_error_image"
        android:layout_width="@dimen/space_332"
        android:layout_height="@dimen/space_104"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_error" />

    <TextView
        android:id="@+id/msv_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_60"
        android:text="@string/txt_msv_net_error"
        android:textColor="@color/global_btn_default"
        android:textSize="@dimen/space_24" />

    <TextView
        android:id="@+id/msv_retry_button"
        android:layout_width="@dimen/space_288"
        android:layout_height="@dimen/space_78"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_100"
        android:background="@drawable/global_btn"
        android:gravity="center"
        android:text="@string/txt_msv_refresh"
        android:textColor="@color/white"
        android:textSize="@dimen/space_32" />

</LinearLayout>